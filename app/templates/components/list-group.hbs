{{#search-tasks model=model filterEnabled=filterEnabled placeholder=(t "search.text.groups") filter=(action 'searchTasks') as |groups|}}
  <br />

{{#if session.isLogged}}
    <div style="float: left; padding: 5px;">
        {{t "list.group"}} {{session.username}},
    </div>
    <div style="float: right; padding: 5px;">
        {{#if filterEnabled}}
            {{t "list.group.show.all"}} {{fa-icon "eye-slash" size="lg" class="btns" click=(action "filterOff")}}
        {{else}}
            {{t "list.group.show.mine"}} {{fa-icon "eye" size="lg" class="btns" click=(action "filterOn")}}
        {{/if}}
    </div>
    <div style="clear:both"></div>
{{/if}}
<div class="list-group">
    {{#each groups as |group|}}
        <a href="#" {{action "viewGroup" group.id}}  class="list-group-item ">
            <div style="float: left;">
                {{#if group.private}} {{fa-icon "user-secret" size="lg"}} {{/if}} {{group.code}} <br/>
                <table>
                    <tr>
                        <td>
                            <div style={{clean-string group.color}} class="groupColorIcon"></div>
                        </td>
                        <td valign="top" style="padding-left: 5px;">
                            {{group.name}}
                        </td>
                    </tr>
                </table>
            </div>
            <div style="float: right;">
                <button class="btn btn-default" type="submit" {{action "deleteGroup" group.id bubbles=false}}>{{t "list.group.delete"}}</button>
            </div>
            <div style="clear:both"></div>
        </a>
    {{else}}
        <div class="list-group-item">{{t "list.group.none"}}</div>
    {{/each}}
</div>

{{/search-tasks}}