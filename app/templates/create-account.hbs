	<h1>{{t "create.user.title"}}</h1><br>
	<form>
  <div class="form-group">
    <label for="task">{{t "create.user.username"}}</label>
    {{input type="text" id="username" class="form-control" placeholder=(t "create.user.username") autofocus="autofocus" value=username}}
  </div>
  <div class="form-group">
    <label for="task">{{t "create.user.password"}}</label>
    {{input type="password" id="password" class="form-control" placeholder=(t "create.user.password") value=password}}
  </div>
  <div class="form-group">
    <label for="task">{{t "create.user.confirmpassword"}}</label>
    {{input type="password" id="confirmpassword" class="form-control" placeholder=(t "create.user.confirmpassword") value=confirmpassword}}
  </div>

  <button class="btn btn-default" type="submit" {{action "createAccount"}}>{{t "create.user.button"}}</button>
	</form>
